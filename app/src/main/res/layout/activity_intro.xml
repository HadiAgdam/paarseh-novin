<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.intro.IntroActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/emmanuel_ikwuegbu_81frhbvliqi_unsplash"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/registerButton"
            style="@style/BlueButton"
            app:layout_constraintBottom_toTopOf="@id/loginBox"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="30dp"
            android:text="register now"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/NowIsYourMoment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now is your\n#ABAmoment\nLearn English"
            android:textSize="45dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="100dp"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/loginText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you already a user ?"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/loginText2"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/loginText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="@drawable/button_blue"
                app:layout_constraintBottom_toBottomOf="@id/loginText1"
                app:layout_constraintLeft_toRightOf="@id/loginText1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="5dp"
                android:textSize="17dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>